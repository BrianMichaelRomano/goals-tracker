<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../includes/header.ejs') %>
</head>

<body>
  <%- include('../includes/nav.ejs') %>
  <main class="container">
    <%- include('../includes/messages.ejs') %>
    <form action="/auth/new-password" method="POST">
      <h1 class="text-center">New Password</h1>
      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" type="password" name="password" id="password" placeholder="Enter password...">
      </div>
      <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input class="form-control" type="password" name="confirmPassword" id="confirmPassword" placeholder="Enter password again...">
      </div>
      <div class="text-center">
        <button class="btn btn-dark" type="submit">Update Password</button>
      </div>
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
      <input type="hidden" name="token" value="<%= token %>">
      <input type="hidden" name="userId" value="<%= userId %>">
    </form>
  </main>
  <%- include('../includes/footer.ejs') %>
</body>

</html>