<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../includes/header.ejs') %>
</head>

<body>
  <%- include('../includes/nav.ejs') %>
  <main class="container">
    <%- include('../includes/messages.ejs') %>
    <a href="/goals/goal-list" class="btn btn-dark mt-3"><small>Back to Goals</small></a>
    <h1 class="text-center">Add Goal</h1>
    <form action="/goals/add-goal" method="POST" class="form-center">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="form-group">
        <label for="goalName">Goal Name</label>
        <input class="form-control" type="text" name="goalName" id="goalName" placeholder="Enter Goal Name...">
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="goalType">Goal Type</label>
            <select class="custom-select" name="goalType" id="goalType">
              <option selected>Select Type Goal...</option>
              <option value="Hours Spent">Hours Spent</option>
              <option value="Times Tasks Task Performed">Times Tasks Task Performed</option>
            </select>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="goalName">Goal Target</label>
            <input class="form-control" type="number" name="goalTarget" id="goalTarget" placeholder="0">
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="daysToTrack">Goal Length</label>
        <select class="custom-select" name="daysToTrack" id="daysToTrack">
          <option selected>Select length of goal...</option>
          <option value="7">Week</option>
          <option value="30">Month</option>
          <option value="365">Year</option>
        </select>
      </div>
      <div class="form-group">
        <label for="backgroundColor">Goal Color</label>
        <input class="form-control jscolor {hash:true}" type="color" name="backgroundColor" id="backgroundColor" value="#a6aca0">
      </div>
      <div class="text-center">
        <button class="btn btn-dark" type="submit">Add Goal</button>
      </div>
    </form>
  </main>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jscolor/2.0.4/jscolor.min.js"></script>

  <%- include('../includes/footer.ejs') %>
</body>

</html>