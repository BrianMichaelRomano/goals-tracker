<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../includes/header.ejs') %>
</head>

<body>
  <%- include('../includes/nav.ejs') %>
  <main class="container">
    <%- include('../includes/messages.ejs') %>
    <a href="/goals/goal-list" class="btn btn-dark mt-3"><small>Back to Goals</small></a>
    <h1 class="text-center">
      <%= goal.goalName %>
    </h1>
    <canvas id="myChart" width="800" height="400"></canvas>

    <div id="filter-panel">
      <div id="chartFilters" class="card">
        <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted">Chart Filter</h6>
          <hr>
          <div class="row">
            <div class="col-md-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" checked="checked" id="dataPointToggle">
                <label class="form-check-label" for="defaultCheck1">
                  Toggle Data Points
                </label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="formControlRange">Max Y Axis</label>
                <input type="range" min="0" max="24" step="1" value="24" class="form-control-range" id="yAxisRange">
              </div>
            </div>
          </div>
        </div>
      </div>

      <div id="chartControls" class="card">
        <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted">Chart Controls</h6>
          <hr>
          <div class="row">
            <div class="col-md-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" checked="checked" id="dataPointToggle">
                <label class="form-check-label" for="defaultCheck1">
                  Toggle Data Points
                </label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="formControlRange">Max Y Axis</label>
                <input type="range" min="0" max="24" step="1" value="24" class="form-control-range" id="yAxisRange">
              </div>
            </div>
          </div>
        </div>
      </div>

      <div id="dataDetails"></div>

      <form action="/goals/goal/add-data/<%= goal._id %>" method="POST" class="form-center">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label for="hours">
            <%= goal.goalDataType %></label>
          <input class="form-control" type="number" name="hours" placeholder="0" step="0.01" id="hours">
        </div>
        <div class="text-center">
          <button class="btn btn-dark" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </main>

  <input type="hidden" id="goalName" value="<%= goal.goalName %>">
  <input type="hidden" id="startDate" value="<%= goal.startDate %>">
  <input type="hidden" id="goalType" value="<%= goal.goalType %>">
  <input type="hidden" id="goalTarget" value="<%= goal.goalTarget %>">
  <input type="hidden" id="chartType" value="<%= goal.chartType %>">
  <input type="hidden" id="daysToTrack" value="<%= goal.daysToTrack %>">
  <input type="hidden" id="dataSet" value="<%= JSON.stringify(goal.dataSet) %>">
  <input type="hidden" id="backgroundColor" value="<%= goal.backgroundColor %>">
  <input type="hidden" id="borderColor" value="<%= goal.borderColor %>">

  <%- include('../includes/footer.ejs') %>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.js"></script>
  <script src="/js/goalChart.js"></script>

</body>

</html>